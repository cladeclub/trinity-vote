{
  "name": "zkvot",
  "description": "World's first fully live anonymous voting application!",
  "author": "node101",
  "version": "0.1.0",
  "repository": "github:node101-io/zkvot",
  "private": true,
  "type": "module",
  "main": "electron/build/server.js",
  "scripts": {
    "dev": "electron electron/server.js",
    "build:next": "next build",
    "build:electron": "tsc --project electron",
    "build": "npm run build:next && npm run build:electron",
    "dist": "npm run build && electron-builder",
    "start": "electron electron/build/server.js"
  },
  "build": {
    "appId": "io.zkvot.app",
    "asar": false,
    "extraResources": [
      {
        "from": "./.next",
        "to": "./"
      }
    ],
    "files": [
      "build/**/*",
      "electron/**/*",
      "node_modules/**/*",
      ".next/**/*",
      "package.json",
      "package-lock.json"
    ],
    "mac": {
      "hardenedRuntime": true,
      "extendInfo": {
        "LSUIElement": 1
      },
      "notarize": true
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  },
  "dependencies": {
    "o1js": "^1.9.0",
    "@heroicons/react": "^1.0.6",
    "@polkadot/api": "^13.2.1",
    "@polkadot/extension-dapp": "^0.53.1",
    "@polkadot/types": "^13.2.1",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "avail-js-sdk": "^0.2.18",
    "axios": "^1.7.7",
    "buffer": "^6.0.3",
    "copy-to-clipboard": "^3.3.3",
    "express": "^4.21.1",
    "framer-motion": "^11.8.0",
    "next": "^14.2.15",
    "react": "^18",
    "react-dom": "^18",
    "react-icons": "^5.3.0",
    "update-electron-app": "^3.0.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/react": "18.3.8",
    "@types/react-dom": "^18.3.1",
    "electron": "33.0.1",
    "electron-builder": "^25.1.8",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "5.6.2"
  }
}
